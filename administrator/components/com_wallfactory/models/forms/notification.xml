<?xml version="1.0" encoding="utf-8"?>

<form>
    <fieldset name="details" side="left">
        <field name="type" type="notification" required="true" onchange="Joomla.submitbutton('notification.refresh');">
            <option value="">COM_WALLFACTORY_FIELD_NOTIFICATION_TYPE_SELECT_TYPE</option>
        </field>

        <field name="language" type="language" required="true" default="*">
            <option value="*">JALL</option>
        </field>

        <field name="published" type="radio" class="switcher btn-group btn-group-yesno" default="0">
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>
    </fieldset>

    <fieldset name="content" side="right">
        <field name="subject" type="text" required="true" class="input-xxlarge input-large-text"/>
        <field name="body" type="NotificationEditor" required="true" filter="JComponentHelper::filterText"/>
    </fieldset>

    <field name="id" type="hidden" filter="int" required="true"/>
</form>
