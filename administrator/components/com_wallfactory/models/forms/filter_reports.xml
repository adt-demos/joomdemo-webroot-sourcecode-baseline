<?xml version="1.0" encoding="utf-8"?>

<form>
    <fields name="filter">
        <field name="search" type="text" hint="JSEARCH_FILTER"/>

        <field name="resolved" type="list" onchange="this.form.submit();">
            <option value="">- Select Status -</option>
            <option value="1">Resolved</option>
            <option value="0">Unresolved</option>
        </field>

        <field name="resource_type" type="ResourceList" onchange="this.form.submit();">
            <option value="">- Select Type -</option>
        </field>

        <field name="resource_user_id" type="UserList" onchange="this.form.submit();">
            <option value="">- Select Reported User -</option>
        </field>

        <field name="user_id" type="UserList" onchange="this.form.submit();">
            <option value="">- Select Reporting User -</option>
        </field>
    </fields>

    <fields name="list">
        <field name="fullordering" type="list" onchange="this.form.submit();">
            <option value="">JGLOBAL_SORT_BY</option>
        </field>

        <field name="limit" type="limitbox" class="input-mini" onchange="this.form.submit();"/>
    </fields>
</form>
