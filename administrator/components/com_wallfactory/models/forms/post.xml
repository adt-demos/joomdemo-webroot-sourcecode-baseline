<?xml version="1.0" encoding="utf-8"?>

<form>
    <fieldset name="author" side="left">
        <field name="type" type="list">
            <option value="user">Registered user</option>
            <option value="guest">Guest</option>
        </field>

        <field name="user_id" type="user" showon="type:user"/>

        <field name="author_name" type="text" showon="type:guest"/>
        <field name="author_email" type="email" showon="type:guest"/>
    </fieldset>

    <fieldset name="receiver" side="left">
        <field name="to_user_id" type="user"/>
    </fieldset>

    <fieldset name="content" side="right">
        <field name="content" type="textarea" rows="10" hiddenLabel="true"/>
    </fieldset>

    <fieldset name="state" side="left">
        <field name="created_at" type="calendar" format="%Y-%m-%d %H:%M" filter="user_utc"/>
        <field name="published" type="radio" class="switcher btn-group btn-group-yesno" default="0">
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>
    </fieldset>

    <field name="id" type="hidden" filter="int" required="true"/>
</form>
