<?xml version="1.0" encoding="utf-8"?>

<form>
    <fieldset name="details" side="left">
        <field name="post_id" type="post" required="true"/>
        <field name="user_id" type="user" required="true"/>
        <field name="content" type="textarea" rows="10"/>
    </fieldset>

    <fieldset name="author" side="right">
        <field name="author_name" type="text"/>
        <field name="author_email" type="text"/>
    </fieldset>

    <fieldset name="state" side="right">
        <field name="created_at" type="calendar" format="%Y-%m-%d %H:%M"/>
        <field name="published" type="radio" class="switcher btn-group btn-group-yesno" default="0">
            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>
        </field>
    </fieldset>

    <field name="id" type="hidden" filter="int" required="true"/>
</form>
